<%- include('../partials/header') %> 
<%- include('../partials/nav') %>



<div class="d-flex row justify-content-center m-5">
  <div class="col-lg-6 justify-content-center col-md-6">
    <form action="/login" method="post">
      <div class="row g-3 form-control p-1 my-1">

        <div class="text-center">
          <h1 class="mb-1"><%= display %></h1>
        </div>

        <% if (errorMessage.length > 0) { %>
          <div class="text-danger p-3 text-center rounded-5"><%= errorMessage %></div>
          <% } %>

        <div class="col-auto my-3">
          <label for="username" class="form-label fw-bold">Username:</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            placeholder="Ex: johnsmithuser"
            required
          />
        </div>

        <div class="col-auto my-3">
          <label for="password" class="form-label fw-bold">Password:</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Minimum of 6 characters"
            required
          />
        </div>

        <div class="col-auto my-3">
          <button type="submit" class="btn btn-primary form-control">
            Login In
          </button>
        </div>
      </div>
      <div class="text-center my-3"><a href="/signup" class="text-bold text-light fs-5 text-decoration-none">&#8592; Go Back</a></div>

    </form>
  </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>


